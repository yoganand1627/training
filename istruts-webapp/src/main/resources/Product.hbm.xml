<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="com.company.epos.dao.Product" table="product">

		<id column="PRODUCT_ID" name="productId" type="java.lang.Long">
			<generator class="identity"/>
		</id>
		
		<property column="PRODUCT_NAME" name="productName" type="java.lang.String"/>
			
		<property column="PRODUCT_DESC" name="description"  type="java.lang.String"/>
			
		<property column="PRICE" name="productPrice" type="java.lang.Double"/>
		 
	</class>
	
</hibernate-mapping>